# vi: filetype=nginx

set $backend "<%= ENV['BACKEND_URL']%>";

location /api {
  add_header Cache-Control "no-cache";
  include /app/base_config.conf;
}

location /oauth {
  add_header Cache-Control "no-cache";
  include /app/base_config.conf;
}

location / {
  expires 2h;
  add_header Cache-Control "public, no-transform";
  include /app/base_config.conf;
}
